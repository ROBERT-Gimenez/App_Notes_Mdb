 
 {{#if tasks}}
 <table class="table table-bordered table-hover table-dark mt-3">
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Descripcion</th>
            <th>Operation</th>
           
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
            <tr>
                <td>{{@index}}</td>  
                <td>{{title}}</td>  
                <td> {{description}}</td>      
                <td class="btns">
                    {{#if done}}
                    <a href="/toggleDone/{{_id}}" class="btn btn-dark">Undone</a>
                    {{else}}
                    <a href="/toggleDone/{{_id}}" class="btn btn-success">Done</a>
                    {{/if}}
                    <a href="/edit/{{_id}}" class="btn btn-primary">edit</a>
                    <a href="/delete/{{_id}}" class="btn btn-danger">Delete</a>                    
                </td>
            </tr>
        {{/each}}
    </tbody>
   </table>

   {{else}}
   <div class="text-center ">
    <h1>No Tasks</h1>
    <img src="" alt="">
   </div>
   {{/if}}