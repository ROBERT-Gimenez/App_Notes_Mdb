<div class="container mt-3" >
   <div class="row">
      <div class="col-md-5 offset-md-3">
         <div class="card-card-body bg-dark p-4 text-white rounded-0">
            <h1>Update a Task</h1>
            <form  action="/edit/{{task._id}}" method="POST">
            <div class="campos">
            <input class="form-control rounded-0 bg-dark text-white "  type="text" name="title" id="title" placeholder="Ingrese un Titulo" value="{{task.title}}">
            <textarea class="form-control rounded-0 bg-dark text-white mt-2" name="description" id="description" cols="30" rows="2" placeholder="Ingrese una Descripcion" >{{task.description}}</textarea>
            </div>
            <button class="btn btn-primary mt-2">Update</button>
            </form>

         </div>

      </div>

   </div>

</div>
